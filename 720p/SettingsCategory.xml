<window id="12">
	<defaultcontrol>3</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<controls>
	<include>Window_OpenClose_Animation</include>
		<include>GlobalBackground</include>
		<control type="group">
			<animation type="WindowOpen" reversible="false">
				<effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300" />
				<effect type="fade" start="0" end="100" time="300" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
				<effect type="fade" start="100" end="0" time="300" />
			</animation>
			<control type="image">
				<posx>80</posx>
				<posy>45</posy>
				<width>1120</width>
				<height>630</height>
				<texture>paper-bg.png</texture>
			</control>

			<control type="grouplist" id="3">
				<description>button area</description>
				<posx>90</posx>
				<posy>120</posy>
				<width>260</width>
				<height>600</height>
				<itemgap>0</itemgap>
				<onleft>5</onleft>
				<onright>5</onright>
				<onup>3</onup>
				<ondown>3</ondown>
				<align>left</align>
				<orientation>Vertical</orientation>
			</control>
			<control type="label">
				<description>header label</description>
				<posx>90</posx>
				<posy>50</posy>
				<width>300</width>
				<height>80</height>
				<font>Simplicity_50_Title</font>
				<label>$INFO[Control.GetLabel(2)]</label>
				<align>center</align>
				<textcolor>red</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="grouplist" id="5">
				<description>control area</description>
				<posx>375</posx>
				<posy>120</posy>
				<width>800</width>
				<height>530</height>
				<itemgap>-1</itemgap>
				<pagecontrol>60</pagecontrol>
				<onleft>3</onleft>
				<onright>3</onright>
				<onup>5</onup>
				<ondown>5</ondown>
			</control>			
		</control>
		<include>BehindDialogFadeOut</include>		

		<control type="button" id="10">
			<description>Default Category Button</description>
			<height>60</height>
			<width>260</width>
			<textoffsetx>20</textoffsetx>
			<align>center</align>
			<aligny>center</aligny>
			<font>Simplicity_30_Title</font>
			<textcolor>brown</textcolor>
				<focusedcolor>red</focusedcolor>
			<texturefocus>simplicity/view-options-button.png</texturefocus>
			<texturenofocus border="5">simplicity/menuitemnf.png</texturenofocus>
			<pulseonselect>false</pulseonselect>
		</control>
		<control type="button" id="7">
			<description>Default Button</description>
			<posx>0</posx>
			<posy>0</posy>
			<height>40</height>
			<font>Simplicity_24</font>
			<textcolor>black</textcolor>
			<focusedcolor>red</focusedcolor>
			<texturefocus border="0,2,0,2">simplicity/button-focus.png</texturefocus>
			<texturenofocus border="0,2,0,2">simplicity/menuitemnf.png</texturenofocus>
		</control>
		<control type="radiobutton" id="8">
			<description>Default RadioButton</description>
			<posx>0</posx>
			<posy>0</posy>
			<height>40</height>
			<radiowidth>83</radiowidth>
			<radioheight>67</radioheight>
			<font>Simplicity_24</font>
			<textcolor>black</textcolor>
			<focusedcolor>red</focusedcolor>
			<textureradiofocus>simplicity/settings-radiobutton-on.png</textureradiofocus>
			<textureradionofocus>simplicity/settings-radiobutton-off.png</textureradionofocus>
			<texturefocus border="0,2,0,2">simplicity/button-focus.png</texturefocus>
			<texturenofocus border="0,2,0,2">simplicity/menuitemnf.png</texturenofocus>
		</control>
		<control type="spincontrolex" id="9">
			<description>Default SpinControlex</description>
			<posx>0</posx>
			<posy>0</posy>
			<font>Simplicity_24</font>
			<textcolor>black</textcolor>
			<focusedcolor>red</focusedcolor>
			<width>300</width>
			<height>40</height>
			<spinwidth>43</spinwidth>
			<spinheight>67</spinheight>
			<textoffsetx>7</textoffsetx>
			<texturefocus border="0,2,0,2">simplicity/button-focus.png</texturefocus>
			<texturenofocus border="0,2,0,2">simplicity/menuitemnf.png</texturenofocus>
			<texturebg>simplicity/button-focus-white.png</texturebg>
			<textureup>simplicity/scroll-up-2.png</textureup>
			<texturedown>simplicity/scroll-down-2.png</texturedown>
			<textureupfocus>simplicity/scroll-up-focus.png</textureupfocus>
			<texturedownfocus>simplicity/scroll-down-focus.png</texturedownfocus>
			<aligny>center</aligny>
			<reverse>yes</reverse>
		</control>
		<control type="image" id="11">
			<description>separator image</description>
			<height>2</height>
			<texture>simplicity/separatorwhite_horizontal.png</texture>
		</control>
		<control type="label" id="2">
			<description>Fake Label so we can pass it value down to the one below</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>0</width>
			<height>0</height>
			<font>-</font>
			<visible>false</visible>
		</control>
	</controls>
</window>
